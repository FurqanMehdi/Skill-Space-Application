<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:id="@+id/main">

    <!-- First Course -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true">

        <!-- Course Thumbnail -->
        <ImageView
            android:id="@+id/course_thumbnail"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/web"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop" />

        <!-- Course Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Course Title -->
            <TextView
                android:id="@+id/course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Web Development"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Course Description -->
            <TextView
                android:id="@+id/course_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HTML , CSS , JS"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <!-- Course Link -->
            <TextView
                android:id="@+id/course_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://youtu.be/6mbwJ2xhgzM"
                android:textSize="14sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginTop="4dp"
                android:autoLink="web" />
        </LinearLayout>
    </LinearLayout>

    <!-- Second Course -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginTop="16dp">

        <!-- Course Thumbnail -->
        <ImageView
            android:id="@+id/android_course_thumbnail"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/android"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop" />

        <!-- Course Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Course Title -->
            <TextView
                android:id="@+id/android_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android Development"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Course Description -->
            <TextView
                android:id="@+id/android_course_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kotlin, Java"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <!-- Course Link -->
            <TextView
                android:id="@+id/android_course_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://youtu.be/HyU4vkZ2NB8"
                android:textSize="14sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginTop="4dp"
                android:autoLink="web" />
        </LinearLayout>
    </LinearLayout>

    <!-- Third Course (C++) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginTop="16dp">

        <!-- Course Thumbnail -->
        <ImageView
            android:id="@+id/cpp_course_thumbnail"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/c"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop" />

        <!-- Course Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Course Title -->
            <TextView
                android:id="@+id/cpp_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C++ Programming"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Course Description -->
            <TextView
                android:id="@+id/cpp_course_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Core C++ Concepts"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <!-- Course Link -->
            <TextView
                android:id="@+id/cpp_course_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://youtu.be/1tON1Ui9ksk?si=6q_vuTXSTWSjvFmM"
                android:textSize="14sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginTop="4dp"
                android:autoLink="web" />
        </LinearLayout>
    </LinearLayout>

    <!-- Fourth Course (Python) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginTop="16dp">

        <!-- Course Thumbnail -->
        <ImageView
            android:id="@+id/python_course_thumbnail"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/python"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop" />

        <!-- Course Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Course Title -->
            <TextView
                android:id="@+id/python_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Python Training"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Course Description -->
            <TextView
                android:id="@+id/python_course_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Python Basics and Advanced"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <!-- Course Link -->
            <TextView
                android:id="@+id/python_course_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://youtu.be/7wnove7K-ZQ?si=lCEYJTs1BM3OggSy"
                android:textSize="14sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginTop="4dp"
                android:autoLink="web" />
        </LinearLayout>
    </LinearLayout>

    <!-- Fifth Course (Data Science) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginTop="16dp">

        <!-- Course Thumbnail -->
        <ImageView
            android:id="@+id/ds_course_thumbnail"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/ds"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop" />

        <!-- Course Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Course Title -->
            <TextView
                android:id="@+id/ds_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Science Course"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Course Description -->
            <TextView
                android:id="@+id/ds_course_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Science and Machine Learning"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <!-- Course Link -->
            <TextView
                android:id="@+id/ds_course_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://youtu.be/-ETQ97mXXF0?si=A8XtLF4a7NEpyN4c"
                android:textSize="14sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginTop="4dp"
                android:autoLink="web" />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/take_test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Test"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white"
        android:enabled="false"
        android:layout_marginTop="8dp"
        android:layout_centerInParent="true" />

</LinearLayout>
